  </div>
  <div class="control-group">
    <%= f.label :search_index, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :search_index, :class => 'form-control' %>
    </div>
    <%= error_span(@item[:search_index]) %>
  </div>
  <div class="control-group">
    <%= f.label :price_jp, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price_jp, :class => 'form-control' %>
    </div>
    <%= error_span(@item[:price_jp]) %>
  </div>
  <div class="control-group">
    <%= f.label :price_us, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price_us, :class => 'form-control' %>
    </div>
    <%= error_span(@item[:price_us]) %>
